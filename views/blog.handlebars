<div class="card text-center">
  <h2 class="card-header">{{name}}</h2>
  <div class="card-body">
    <p>{{content}}</p>
    <p class="card-footer">Posted by {{user.user_name}} on {{format_date date_created}}</p>
    <button id="createComment">Comment</button>


    {{#if comments.length}}
    <div class="col-md-6 comment-list">
      <h3>Current Comments:</h3>
      {{#each comments as |comment| }}
      <div class="row mb-4 project">
        <div class="col-md-5">
          <div class='card'>
            <div class="card-header">
              <h3>{{comment.title}}</h3>
              <span>Posted by {{comment.user.user_name}} on {{format_date comment.date_created}}</span>
            </div>
            <div class="card-body">
              <p>
                {{comment.content}}
              </p>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
      {{/if}}
    </div>
  </div>
  <div class="col-md-6">
    <h3>Create a New Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-title">Title:</label>
        <input class="form-input" type="text" id="comment-title" name="comment-title" />
      </div>
      <div class="form-group">
        <label for="comment-cont">Content:</label>
        <textarea class="form-input" id="comment-cont" name="comment-cont"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Comment</button>
      </div>
    </form>
  </div>


  <script src="/js/blog.js"></script>