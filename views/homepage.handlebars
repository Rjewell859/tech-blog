<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <div class='card'>
      <div class="card-header">
        <h3><a href="/blog/{{blog.id}}">{{blog.name}}</a></h3>
      <span>{{format_date blog.date_created}}</span>
      </div>
      <div class="card-body">
        <p>
          {{blog.content}}
        </p>
      </div>
    </div>
  </div>
</div>
{{/each}}