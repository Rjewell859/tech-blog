<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <div class='card'>
      <div class="card-header">
        <h3>{{blog.name}}</h3>
      <span>Posted by {{blog.user.name}} on {{format_date blog.date_created}}</span>
      </div>
      <div class="card-body">
        <p>
          {{blog.description}}
        </p>
      </div>
    </div>
  </div>
</div>
{{/each}}